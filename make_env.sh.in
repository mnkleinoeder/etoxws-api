# sample file for setting up the environment for running the webapp
# copy to a "make_env.sh" and adapt paths below. Don't checkin the copied file.

# set the following paths
VENV=/home/modeler/etoxws/venv
ETOXWSAPI_DIR=/home/modeler/etoxws/etoxws-api

# defaults for etoxlab. otherwise reset next two vars  
IMPL_DIR=/home/modeler/soft/eTOXlab/ws/
RDKIT_DIR=/opt/RDKIT

. $VENV/bin/activate

export LD_LIBRARY_PATH=$RDKIT_DIR/lib
export PYTHONPATH=$IMPL_DIR:$ETOXWSAPI_DIR/src
 
export DJANGO_SETTINGS_MODULE=etoxwsapi.settings.etoxlabdev
